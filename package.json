{
  "name": "github-actions-report-lcov",
  "version": "1.0.0",
  "description": "Report the code coverage from LCOV files",
  "main": "dist/main/index.js",
  "scripts": {
    "install:git:hooks": "cp git-hooks/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit",
    "lint": "rome check src/*.js --apply",
    "lint:check": "rome check src/*.js",
    "format": "rome format src/*.js --write",
    "format:check": "rome format src/*.js",
    "build:post": "ncc build src/post.js -o dist/post --source-map --license licenses.txt",
    "build:main": "ncc build src/main.js -o dist/main --source-map --license licenses.txt",
    "prepare": "npm run format && npm run lint && npm run build:post && npm run build:main"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zgosalvez/github-actions-report-lcov.git"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "Zennon Gosalvez",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^1.1.1",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.3",
    "install": "^0.13.0",
    "lcov-total": "^1.0.7",
    "npm": "^9.8.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "rome": "12.1.3"
  }
}

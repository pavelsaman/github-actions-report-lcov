{
  "name": "github-actions-report-lcov",
  "version": "1.0.0",
  "description": "Report code coverage from LCOV files",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "install:git:hooks": "cp git-hooks/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit",
    "preinstall": "npm run install:git:hooks",
    "lint": "rome check src/**/*.js --apply",
    "lint:check": "rome check src/**/*.js",
    "format": "rome format src/**/*.js --write",
    "format:check": "rome format src/**/*.js",
    "build:pre": "esbuild src/pre.js --outfile=dist/pre/index.js --sourcemap --minify --platform=node --target=node16",
    "build:main": "esbuild src/main.js --outfile=dist/main/index.js --sourcemap --minify --platform=node --target=node16",
    "build:all": "npm run format && npm run lint && npm run build:pre && npm run build:main"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zgosalvez/github-actions-report-lcov.git"
  },
  "keywords": [
    "actions",
    "node",
    "lcov",
    "coverage"
  ],
  "author": "Zennon Gosalvez",
  "maintainers": [
    "Pavel Saman"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^1.1.1",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/glob": "^0.4.0",
    "lcov-total": "^2.1.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.2",
    "rome": "12.1.3"
  }
}

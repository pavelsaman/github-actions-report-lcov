{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "files": {
    "ignore": ["./dist", "./lib"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": ["./dist"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["./dist"],
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 5
          }
        }
      },
      "correctness": {
        "all": true,
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error",
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["./dist"]
  }
}
